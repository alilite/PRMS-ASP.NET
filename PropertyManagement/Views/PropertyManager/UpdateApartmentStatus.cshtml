@model PropertyManagement.Models.Apartment

<h2>Update Apartment Status</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ApartmentId)

    <div class="form-group">
        <label>Apartment Number</label>
        <input type="text" class="form-control" value="@Model.Number" readonly />
    </div>

    <div class="form-group">
        <label>Property</label>
        <input type="text" class="form-control" value="@Model.Property.Name" readonly />
    </div>

    @Html.LabelFor(m => m.AvailabilityStatus)
    @Html.DropDownListFor(
        m => m.AvailabilityStatus,
        new SelectList(new[] { "Available", "Occupied", "Under Maintenance" }, Model.AvailabilityStatus),
        "Select Status",
        new { @class = "form-control" }
    )

    <button type="submit" class="btn btn-primary">Save Changes</button>
}
