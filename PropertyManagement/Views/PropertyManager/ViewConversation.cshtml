@model IEnumerable<PropertyManagement.Models.Message>

<h2>Conversation with @ViewBag.TenantName</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Message</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>
                    @if (message.SenderRole == "Tenant")
                    {
                        <span class="badge bg-success">Tenant</span>
                    }
                    else if (message.SenderRole == "Manager")
                    {
                        <span class="badge bg-primary">Manager</span>
                    }
                </td>
                <td>@message.Content</td>
                <td>@message.Timestamp.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("ReplyMessage", new { id = Model.FirstOrDefault()?.MessageId })" class="btn btn-primary">Reply</a>
