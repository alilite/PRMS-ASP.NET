<h2>Manage Properties</h2>

<!-- Search Form -->
<form method="get" action="@Url.Action("ManageProperties", "PropertyManager")">
    <div class="form-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search properties..."
               value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<a href="@Url.Action("CreateProperty", "PropertyManager")" class="btn btn-success mb-3">Add Property</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.Name</td>
                <td>@property.Location</td>
                <td>@property.Description</td>
                <td>
                    <a href="@Url.Action("EditProperty", "PropertyManager", new { id = property.PropertyId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteProperty", "PropertyManager", new { id = property.PropertyId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this property?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
