@model PropertyManagement.Models.Appointment

<h2>Schedule an Appointment</h2>
@using (Html.BeginForm())
{
    <p><strong>Apartment:</strong> @ViewBag.ApartmentDetails.Number</p>
    <p><strong>Property:</strong> @ViewBag.ApartmentDetails.Property.Name</p>

    @Html.HiddenFor(m => m.ApartmentId)

    <div class="form-group">
        @Html.LabelFor(m => m.AppointmentDate)
        @Html.TextBoxFor(m => m.AppointmentDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AppointmentTime)
        @Html.TextBoxFor(m => m.AppointmentTime, new { @class = "form-control", type = "time" })
    </div>

    <button type="submit" class="btn btn-primary">Confirm Appointment</button>
}
