@model IEnumerable<PropertyManagement.Models.Tenant>

<h2>Manage Tenants</h2>

<!-- Search Form -->
<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search tenants..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<!-- Add Button -->
<a href="@Url.Action("CreateTenant", "Owner")" class="btn btn-success mb-3">Add Tenant</a>

<!-- Tenants Table -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tenant in Model)
        {
            <tr>
                <td>@tenant.Name</td>
                <td>@tenant.Email</td>
                <td>@tenant.Phone</td>
                <td>
                    <a href="@Url.Action("UpdateTenant", "Owner", new { id = tenant.TenantId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteTenant", "Owner", new { id = tenant.TenantId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this tenant?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
