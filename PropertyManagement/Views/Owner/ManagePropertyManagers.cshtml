@model IEnumerable<PropertyManagement.Models.PropertyManager>

<h2>Manage Property Managers</h2>

<!-- Search Form -->
<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search managers..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<!-- Add Button -->
<a href="@Url.Action("CreatePropertyManager", "Owner")" class="btn btn-success mb-3">Add Property Manager</a>

<!-- Managers Table -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.Name</td>
                <td>@manager.Email</td>
                <td>@manager.Phone</td>
                <td>
                    <a href="@Url.Action("UpdatePropertyManager", "Owner", new { id = manager.ManagerId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeletePropertyManager", "Owner", new { id = manager.ManagerId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this manager?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
